<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/simple_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            android:visibility="gone"
            tools:text="标题" />

        <TextView
            android:id="@+id/simple_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            tools:text="提示信息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/simple_message_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/simple_message_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:text="取消"
                android:textColor="@color/colorTextSecondary" />

            <View
                android:id="@+id/simple_message_btn_divider"
                android:layout_width="2px"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/simple_message_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
