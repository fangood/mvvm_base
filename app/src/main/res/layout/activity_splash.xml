<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".SplashActivity">

    <LinearLayout
        android:id="@+id/splash_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="invisible"
        android:weightSum="2">

        <Button
            android:id="@+id/splash_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_splash_button_round_corner"
            android:padding="10dp"
            android:text="登录"
            android:textColor="@color/splashText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/splash_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_splash_button_round_corner"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/splashText"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_above="@id/splash_login_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/splash_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="欢迎进入"
                android:textColor="@color/splashText"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/splash_app_name_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splash_app_name"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/splashText"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>